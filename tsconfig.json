{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "paths": {
            "*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
